extend jade-templates/main.jade
block head
    - var title         =   "Home Page";
    - var description   =   "Home Page";
    - var keywords      =   "Home Page,Index";
    - var author        =   "Nicholas J. Phillips";
    ///Metadata
    meta(charset="UTF-8")
    meta(name="description", content=description)
    meta(name="keywords", content=keywords)
    meta(name="author", content=author)
    //\Metadata
    
    block other

    ///Title
    title=title
    //\Title
block body
    .row
        .col-md-10
            h1#animated1(style={"display":"none"}) Welcome To Monstro Gaming
            // Calender 
            // --------END-------- 

            script(type="application/javascript").
                $(document).ready(function() {
                    setTimeout(function() {
                        $("#animated1").animateCSS("zoomInDown", function() {
                            $(this).css("transition", "1s all ease-in-out").css("color", "darkgreen");
                        });
                    }, (1) * 1000);
                });
        ///Widgets
        .col-md-2.widgets
            include widgets/index.jade
            script(type="application/javascript").
                setTimeout(function() {
                    $(".widgets").stickySidebar({
                        timer: 1,
                        padding: 30
                    });
                }, (1) * 1000);
        //\Widgets